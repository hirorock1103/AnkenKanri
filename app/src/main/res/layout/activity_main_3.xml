<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--anken-->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/task3"
            android:id="@+id/anken_image"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="進行中案件"
            android:id="@+id/anken_title1"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/anken_image"
            app:layout_constraintLeft_toLeftOf="@id/anken_image"
            app:layout_constraintRight_toRightOf="@id/anken_image"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12)"
            android:id="@+id/anken_count1"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/anken_title1"
            app:layout_constraintLeft_toLeftOf="@id/anken_image"
            app:layout_constraintRight_toRightOf="@id/anken_image"

            />

        <!--task-->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/task2"
            android:id="@+id/task_image"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="進行中タスク"
            android:id="@+id/task_title1"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/task_image"
            app:layout_constraintLeft_toLeftOf="@id/task_image"
            app:layout_constraintRight_toRightOf="@id/task_image"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12)"
            android:id="@+id/task_count1"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/task_title1"
            app:layout_constraintLeft_toLeftOf="@id/task_image"
            app:layout_constraintRight_toRightOf="@id/task_image"

            />




    </android.support.constraint.ConstraintLayout>

</ScrollView>



