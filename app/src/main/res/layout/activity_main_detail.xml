<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hirorock1103.template_01.MainDetailActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anken_title"
            android:text="案件名：ひまわり電気"
            style="@style/h1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_edit"
            android:id="@+id/edit_mark"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/anken_title"
            app:layout_constraintBottom_toBottomOf="@id/anken_title"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit"
            android:textSize="@dimen/Small"
            app:layout_constraintTop_toBottomOf="@id/edit_mark"
            app:layout_constraintRight_toRightOf="@id/edit_mark"
            app:layout_constraintLeft_toLeftOf="@id/edit_mark"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newyork"
            android:id="@+id/image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@id/anken_title"
            app:layout_constraintTop_toBottomOf="@id/anken_title"
            />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/image"
                    app:layout_constraintTop_toTopOf="@id/image"
                    android:id="@+id/image_side"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="予算"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/budget"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/budget"
                        android:text="56,200円"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="工数"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/man_day"
                        app:layout_constraintLeft_toLeftOf="@id/man_day"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/man_day"
                        android:text="1.5人日(5h)"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintLeft_toRightOf="@id/budget"
                        app:layout_constraintBottom_toBottomOf="@id/budget"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="開始日"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/start"
                        app:layout_constraintLeft_toLeftOf="@id/start"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/start"
                        android:text="2019/01/05"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toBottomOf="@id/budget"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="～"
                        android:id="@+id/from"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/start"
                        app:layout_constraintTop_toTopOf="@id/start"
                        app:layout_constraintLeft_toRightOf="@id/start"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="終了日"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/end"
                        app:layout_constraintLeft_toLeftOf="@id/end"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/end"
                        android:text="2019/01/05"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintBottom_toBottomOf="@id/start"
                        app:layout_constraintLeft_toRightOf="@id/from"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="案件種別"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/type"
                        app:layout_constraintLeft_toLeftOf="@id/type"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/type"
                        android:text="サイト制作"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toBottomOf="@id/end"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />

                </android.support.constraint.ConstraintLayout>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:id="@+id/longtext"-->
                <!--app:layout_constraintTop_toBottomOf="@id/image"-->
                <!--android:text="@string/large_text"-->
                <!--/>-->

            <!--task-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/task_img"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_task_img"
                app:layout_constraintTop_toTopOf="@id/task_title"
                app:layout_constraintBottom_toBottomOf="@id/task_title"
                app:layout_constraintLeft_toLeftOf="@id/recycler_view"
                />
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Task"
                android:id="@+id/task_title"
                style="@style/border_bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/image_side"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/task_area"
                style="@style/background_corner_radius_primary_light"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/task_title"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="終了"
                    android:id="@+id/task_count_title0"
                    android:textSize="@dimen/Small"
                    android:layout_marginLeft="20dp"
                    style="@style/background_corner_radius_primary_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_count_0"
                    android:text="6件"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Middiam"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/task_count_title0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="対応中"
                    android:id="@+id/task_count_title1"
                    android:textSize="@dimen/Small"
                    android:layout_marginLeft="10dp"
                    style="@style/background_corner_radius_primary_dark"
                    app:layout_constraintLeft_toRightOf="@id/task_count_0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_count_1"
                    android:text="2件"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Middiam"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/task_count_title1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未対応"
                    android:id="@+id/task_count_title2"
                    android:textSize="@dimen/Small"
                    android:layout_marginLeft="10dp"
                    style="@style/background_corner_radius_primary_dark"
                    app:layout_constraintLeft_toRightOf="@id/task_count_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_count_2"
                    android:text="2件"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Middiam"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/task_count_title2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_arrow"
                    android:layout_marginRight="1dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </android.support.constraint.ConstraintLayout>



            <!--learm-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/learn_img"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_learn_img"
                app:layout_constraintTop_toTopOf="@id/learn_title"
                app:layout_constraintBottom_toBottomOf="@id/learn_title"
                app:layout_constraintLeft_toLeftOf="@id/recycler_view"
                />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Learn"
                android:id="@+id/learn_title"
                style="@style/border_bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/task_area"
                app:layout_constraintLeft_toLeftOf="parent"
                />



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/learn_area"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/learn_title"
                android:layout_marginTop="10dp"
                style="@style/background_corner_radius_primary_light"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学習件数"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/learn_title_0"
                    android:textSize="@dimen/Small"
                    style="@style/background_corner_radius_primary_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/learn_0"
                    android:text="6件"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Middiam"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/learn_title_0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未解決"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/learn_title_1"
                    android:textSize="@dimen/Small"
                    style="@style/background_corner_radius_primary_dark"
                    app:layout_constraintLeft_toRightOf="@id/learn_0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/learn_1"
                    android:text="6件"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/Middiam"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/learn_title_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_arrow"
                    android:layout_marginRight="1dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

            <!--milestone-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/milestone_img"
                android:src="@mipmap/ic_milestone_img"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/milestone_title"
                app:layout_constraintBottom_toBottomOf="@id/milestone_title"
                app:layout_constraintLeft_toLeftOf="@id/recycler_view"
                />
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="MileStone"
                android:id="@+id/milestone_title"
                style="@style/border_bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/learn_area"
                app:layout_constraintLeft_toLeftOf="@id/recycler_view"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:id="@+id/recycler_view"
                app:layout_constraintTop_toBottomOf="@id/learn_title"
                app:layout_constraintLeft_toLeftOf="parent"
                ></android.support.v7.widget.RecyclerView>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_milestone"
        android:id="@+id/fab"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</android.support.constraint.ConstraintLayout>
