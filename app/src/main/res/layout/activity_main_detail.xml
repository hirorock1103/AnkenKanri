<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hirorock1103.template_01.MainDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anken_title"
            android:text="案件名：ひまわり電気"
            style="@style/h1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_edit"
            android:id="@+id/edit_mark"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/anken_title"
            app:layout_constraintBottom_toBottomOf="@id/anken_title"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit"
            android:textSize="@dimen/Small"
            app:layout_constraintTop_toBottomOf="@id/edit_mark"
            app:layout_constraintRight_toRightOf="@id/edit_mark"
            app:layout_constraintLeft_toLeftOf="@id/edit_mark"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newyork"
            android:id="@+id/image"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@id/anken_title"
            app:layout_constraintTop_toBottomOf="@id/anken_title"
            />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/image"
                    app:layout_constraintTop_toTopOf="@id/image"
                    android:id="@+id/image_side"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="予算"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/budget"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/budget"
                        android:text="56,200円"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="開始日"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/start"
                        app:layout_constraintLeft_toLeftOf="@id/start"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/start"
                        android:text="2019/01/05"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toBottomOf="@id/budget"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="～"
                        android:id="@+id/from"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/start"
                        app:layout_constraintTop_toTopOf="@id/start"
                        app:layout_constraintLeft_toRightOf="@id/start"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="終了日"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/end"
                        app:layout_constraintLeft_toLeftOf="@id/end"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/end"
                        android:text="2019/01/05"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintBottom_toBottomOf="@id/start"
                        app:layout_constraintLeft_toRightOf="@id/from"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Small"
                        android:text="案件種別"
                        style="@style/background_corner_radius_primary_dark"
                        app:layout_constraintBottom_toTopOf="@id/type"
                        app:layout_constraintLeft_toLeftOf="@id/type"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/type"
                        android:text="サイト制作"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toBottomOf="@id/end"
                        app:layout_constraintLeft_toLeftOf="@id/budget"
                        />




                </android.support.constraint.ConstraintLayout>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:id="@+id/longtext"-->
                <!--app:layout_constraintTop_toBottomOf="@id/image"-->
                <!--android:text="@string/large_text"-->
                <!--/>-->

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/recycler_view"
                app:layout_constraintTop_toBottomOf="@id/image"
                ></android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_milestone"
        android:id="@+id/fab"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</android.support.constraint.ConstraintLayout>
