<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:text="background_corner_radius1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/sample1"
        style="@style/background_corner_radius_primary_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView Sample"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:text="background_style1"
        app:layout_constraintLeft_toLeftOf="@+id/title1"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="email|web"
        android:text="e.com"
        app:layout_constraintLeft_toLeftOf="@+id/sample1"
        app:layout_constraintBottom_toBottomOf="@+id/title2"
        />


</android.support.constraint.ConstraintLayout>