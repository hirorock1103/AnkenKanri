<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--milestone-->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/task_img"
        android:src="@mipmap/ic_task_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Task"
        android:id="@+id/task_title"
        style="@style/border_bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintBottom_toBottomOf="@id/task_img"
        app:layout_constraintLeft_toRightOf="@id/task_img"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        style="@style/background_corner_radius_primary_light"
        android:id="@+id/recycler_view"
        app:layout_constraintTop_toBottomOf="@id/task_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task登録のある案件一覧"
        style="@style/border_bottom"
        android:layout_marginTop="15dp"
        android:id="@+id/list_title"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        app:layout_constraintLeft_toLeftOf="@id/recycler_view"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/scroll"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/list_title"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/radio"
            >

        </RadioGroup>


    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参照する"
        android:id="@+id/bt_extends"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




</android.support.constraint.ConstraintLayout>