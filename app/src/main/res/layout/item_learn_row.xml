<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        android:padding="5dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <android.support.constraint.ConstraintLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/learn_no"
                android:text="No.1"
                android:textSize="@dimen/Small"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toTopOf="@id/title"
                app:layout_constraintLeft_toLeftOf="@id/title"
                style="@style/background_corner_radius_primary_dark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/Small"
                android:text="疑問"
                android:id="@+id/status"
                android:layout_marginLeft="10dp"
                style="@style/background_corner_radius_primary_dark"
                app:layout_constraintLeft_toRightOf="@id/learn_no"
                app:layout_constraintBottom_toBottomOf="@id/learn_no"
                />


            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/learn_name"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                style="@style/border_bottom"
                android:text="gitの使い方"
                app:layout_constraintLeft_toLeftOf="@id/learn_no"
                app:layout_constraintTop_toBottomOf="@id/learn_no"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作成日:2019/02/11"
                android:textSize="@dimen/Small"
                android:id="@+id/create_date"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/learn_no"
                />




        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>