<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        android:padding="2dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/02/04"
                android:textSize="10sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/target_date_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消費工数(h)"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:id="@+id/man_day_title"
                app:layout_constraintTop_toBottomOf="@+id/target_date_title"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="4h"
                android:id="@+id/man_day"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/man_day_title"
                app:layout_constraintTop_toTopOf="@id/man_day_title"
                app:layout_constraintBottom_toBottomOf="@id/man_day_title"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仕様書作成\n（案件名：ひまわり）"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/task_detail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/man_day"
                app:layout_constraintBottom_toBottomOf="@id/man_day"
                style="@style/background_corner_radius_primary_light"
                />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/contents"-->
                <!--android:singleLine="true"-->
                <!--android:ellipsize="end"-->
                <!--android:textSize="12sp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--style="@style/border_bottom"-->
                <!--android:text="Go home and kiss your wife!"-->
                <!--app:layout_constraintLeft_toLeftOf="@id/man_day_title"-->
                <!--app:layout_constraintTop_toBottomOf="@id/man_day_title"-->
                <!--/>-->

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>